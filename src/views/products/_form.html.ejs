<div>
    <% if (locals.errors) { %>
        <div class="errors">
          You need to fix the following errors:
          <ul>
            <% errors.forEach(error => { %>
              <li><%= error.message %></li>
            <% }); %>
          </ul>
        </div>
    <% } %>
    <form action="<%= submitProductPath %>" method="post">
        <% if (!product.isNewRecord) { %>
            <input type="hidden" name="_method" value="patch" />
        <% } %>
        <div class="field">
            <label for="name">Name</label>
            <input type="text" name="name" value="<%= product.name %>" />
        </div>
        <div class="field">
            <label for="exchangePrice">Exchange Price</label>
            <input type="number" name="exchangePrice" value="<%= product.exchangePrice %>" />       
        </div>
        <div class="field">    
            <label for="Description">Description</label>
            <input type="text" name="description" value="<%= product.description %>" />       
        </div>
        <div class="field">
            <select name="category">
                <% categoriesList.forEach((category) => { %>
                    <option value="<%= category.id %>"><%- category.name %></option>
                <% }) %>
            </select>
        </div>
        <div>
            <% if (product.isNewRecord) { %>
                <input type="submit" name="create" value="Create"/>
            <% } else { %>
                <input type="submit" name="update" value="Update"/>
            <% } %>
        </div>
    </form>
    <p>Do you want to add a new category?<a href="<%= newCategoryPath %>">click here</a></p>
</div>